    private void signinActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
        
        
        
        String username1 =username.getText();
        String password1 =password.getText();
        
        
        BufferedWriter writer = null;
try
{
    writer = new BufferedWriter( new FileWriter( "C:\\Users\\Valentine\\Documents\\login2.txt"));
    writer.write("Username: " +username1+ " password: " + password1 );
System.out.println("Entry is Saved");
}
catch ( IOException e)
{
}
finally
{
    try
    {
        if ( writer != null)
        writer.close( );
    }
    catch ( IOException e)
    {
    }
    
    
}            

    
   

    }                                      

