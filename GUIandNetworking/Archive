    private void buttonArchiveActionPerformed(java.awt.event.ActionEvent evt) {                                              
        // TODO add your handling code here:
       
        
        
        
        String text = messageField.getText();
        
        String date = new SimpleDateFormat("dd-MM-yyyy").format(new Date());
         
         
         
         BufferedWriter writer = null;
try
{
    writer = new BufferedWriter( new FileWriter( "C:\\Users\\Valentine\\Documents\\archive.txt"));
    writer.write("Text: " + text+ " date: " +date);
    System.out.println("Entry is Saved");
}
catch ( IOException e)
{
}
finally
{
    try
    {
        if ( writer != null)
        writer.close( );
    }
    catch ( IOException e)
    {
    }
        
        
        
        
        
        
        
        
        
}
        

    }                                             

