    private void signUpButtonActionPerformed(java.awt.event.ActionEvent evt) {                                             

String username = jUsername.getText();
String fName = jFirstName.getText();
String sName = jSurname.getText();
String email= jEmail.getText();
String passwd = jPassword.getText();
String rePasswd = jRepPassword.getText();



if(passwd.equals(rePasswd)){
    

BufferedWriter writer = null;
try
{
    writer = new BufferedWriter( new FileWriter( "C:\\Users\\Valentine\\Documents\\login1.txt"));
    writer.write("Username: " +username+ " FirstName: " + fName+ " Surname: " +sName+ ""+ " Email: " +email+ " Password:" +passwd + " Gender:" + gender);
System.out.println("Entry is Saved");
}
catch ( IOException e)
{
}
finally
{
    try
    {
        if ( writer != null)
        writer.close( );
    }
    catch ( IOException e)
    {
    }
    
    
}            

    }
else{
System.out.println("Make sure your password are equal");
}

// TODO add your handling code here:
    }                                            

    private void jRadioMaleActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        if(jRadioMale.isSelected()){
gender = "male";
jRadioFemale.setSelected(false);
}
    }                                          

    private void jRadioFemaleActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
        
         if(jRadioFemale.isSelected()){
gender = "female";
jRadioMale.setSelected(false);

}
    }                                            

